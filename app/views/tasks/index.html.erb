<% if logged_in? %>
    <h1>タスクリスト</h1>
    
    <ul>
        <% @task.each do |task| %>
            <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
        <% end %>
    </ul>
    
    <%= link_to '新規タスクリストの作成', new_task_path %>
    
    <%= link_to 'ログアウト', logout_path, method: :delete %>
<% end %>